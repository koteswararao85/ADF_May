{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "marchadffactory"
		},
		"sourceLS_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'sourceLS'"
		},
		"sqldbLS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'sqldbLS'"
		},
		"targetLS_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'targetLS'"
		},
		"sourceLS_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://datalakesourcemarch.dfs.core.windows.net/"
		},
		"targetLS_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://datalaketargetmarch.dfs.core.windows.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "marchadffactory_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"sourceLS_accountKey": {
						"value": "[parameters('sourceLS_accountKey')]"
					},
					"sqldbLS_connectionString": {
						"value": "[parameters('sqldbLS_connectionString')]"
					},
					"targetLS_accountKey": {
						"value": "[parameters('targetLS_accountKey')]"
					},
					"sourceLS_properties_typeProperties_url": {
						"value": "[parameters('sourceLS_properties_typeProperties_url')]"
					},
					"targetLS_properties_typeProperties_url": {
						"value": "[parameters('targetLS_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "marchadffactory_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'marchadffactory_ArmTemplate_0')]"
			]
		}
	]
}